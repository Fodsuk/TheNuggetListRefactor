					<div class="controls">
						<textarea class="input-block-level" rows="10" placeholder="Describe your nugget"></textarea>
					</div>
				</div>
				<div class="form-actions">
					<button type="button" class="btn">
						Cancel</button>
					<button type="submit" class="btn btn-primary btn-large">
						Post nugget</button>
				</div>
			</div>
